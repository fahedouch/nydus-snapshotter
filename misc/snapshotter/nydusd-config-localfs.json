{
  "device": {
    "backend": {
      "type": "localfs",
      "config": {
        "dir": "/var/lib/containerd/io.containerd.snapshotter.v1.nydus/cache/"
      }
    },
    "cache": {
      "type": "blobcache"
    }
  },
  "mode": "direct",
  "digest_validate": false,
  "iostats_files": false,
  "enable_xattr": true,
  "amplify_io": 1048576,
  "fs_prefetch": {
    "enable": true,
    "threads_count": 2
  }
}